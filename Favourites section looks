<body>
    <div class="favorites-container">
        <h1>Products</h1>
        <!-- Product Listing -->
        <div class="products">
            <div class="product">
                <img src="https://via.placeholder.com/200x150" alt="Product 1">
                <p>Product 1</p>
                <button onclick="addToFavorites('Product 1', 'https://via.placeholder.com/200x150')">Save to Favorites</button>
            </div>
            <div class="product">
                <img src="https://via.placeholder.com/200x150" alt="Product 2">
                <p>Product 2</p>
                <button onclick="addToFavorites('Product 2', 'https://via.placeholder.com/200x150')">Save to Favorites</button>
            </div>
            <div class="product">
                <img src="https://via.placeholder.com/200x150" alt="Product 3">
                <p>Product 3</p>
                <button onclick="addToFavorites('Product 3', 'https://via.placeholder.com/200x150')">Save to Favorites</button>
            </div>
            <div class="product">
                <img src="https://via.placeholder.com/200x150" alt="Product 4">
                <p>Product 4</p>
                <button onclick="addToFavorites('Product 4', 'https://via.placeholder.com/200x150')">Save to Favorites</button>
            </div>
        </div>

        <h1>Saved Favorites</h1>
        <!-- Favorites Listing -->
        <div class="favorites" id="favorites-list">
            <p class="no-favorites">No favorite products saved yet.</p>
        </div>
    </div>

    <script>
        // Function to add a product to favorites
        function addToFavorites(name, imageUrl) {
            const favoritesList = document.getElementById('favorites-list');
            const noFavoritesMessage = document.querySelector('.no-favorites');

            // Remove "No favorites" message if present
            if (noFavoritesMessage) {
                noFavoritesMessage.remove();
            }

            // Check if product is already in favorites
            const existingFavorite = [...favoritesList.children].find(
                (favorite) => favorite.dataset.name === name
            );
            if (existingFavorite) {
                alert(`${name} is already in your favorites!`);
                return;
            }

            // Create a new favorite item
            const favoriteItem = document.createElement('div');
            favoriteItem.classList.add('favorite');
            favoriteItem.dataset.name = name;
            favoriteItem.innerHTML = `
                <img src="${imageUrl}" alt="${name}">
                <p>${name}</p>
                <button onclick="removeFromFavorites('${name}')">Remove</button>
            `;

            // Append to the favorites list
            favoritesList.appendChild(favoriteItem);
        }

        // Function to remove a product from favorites
        function removeFromFavorites(name) {
            const favoritesList = document.getElementById('favorites-list');
            const favoriteItem = [...favoritesList.children].find(
                (favorite) => favorite.dataset.name === name
            );

            // Remove the item if found
            if (favoriteItem) {
                favoriteItem.remove();
            }

            // Show "No favorites" message if the list is empty
            if (favoritesList.children.length === 0) {
                const noFavoritesMessage = document.createElement('p');
                noFavoritesMessage.classList.add('no-favorites');
                noFavoritesMessage.textContent = 'No favorite products saved yet.';
                favoritesList.appendChild(noFavoritesMessage);
            }
        }
    </script>
</body>

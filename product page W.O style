    <script>
        // Example Script Tag for Demo Purposes
        // This script simply toggles the description on smaller screens for demo purposes.
        // In a real scenario, this could handle cart functionality, image galleries, etc.
        document.querySelectorAll('.product-images img').forEach(img => {
            img.onclick = () => {
                // Example: Toggle Image on Click
                // In a real app, you'd likely change the src of a main image display
                img.style.border = img.style.border === '3px solid #00698f' ? '' : '3px solid #00698f';
            }

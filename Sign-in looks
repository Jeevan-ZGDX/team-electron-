<body>

    <div class="sign-in-container">
        <ul class="sign-in">
            <li id="signInBtn">Sign In</li>
        </ul>
        <!-- Additional information displayed on hover -->
        <div class="extra-info">
            <p><a href="#">My Account</a></p>
            <p><a href="#">H&M Membership</a></p>
            <p><a href="#">Not a member yet? <span style="color: blue;">Join Here!</span></a></p>
        </div>
    </div>

    <script>
        // JavaScript to handle hover effect (optional for adding behavior)
        const signInButton = document.getElementById("signInBtn");

        // Optional: Add an event listener for hover effect
        signInButton.addEventListener("mouseover", function() {
            signInButton.style.color = "white"; // Change text color on hover
        });

        signInButton.addEventListener("mouseout", function() {
            signInButton.style.color = "black"; // Reset text color after hover
        });
    </script>

</body>
